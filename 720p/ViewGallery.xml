<?xml version="1.0" encoding="UTF-8"?>
<includes>
<!--STRIP LAYOUT-->	
	<include name="view_Gallery">
		<!--content detail-->
		<control type="group">
			<visible>Control.IsVisible(53)</visible>
			<include>transition_Info</include>
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<!--flags-->
			<control type="image">
				<left>105</left>
				<top>590</top>
				<width>128</width>
				<height>64</height>
				<aspectratio align="right">keep</aspectratio>
				<texture>$VAR[flag_Studio]</texture>
			</control>
			<!--strip bottom-->
			<control type="group">
				<left>265</left>
				<top>585</top>
				<control type="group">
					<control type="label">
						<label>$VAR[gallery_Header]</label>
						<width>940</width>
						<textcolor>Color1</textcolor>
						<include>detail_Title</include>
					</control>
					<control type="group">
						<visible>Container.Content(movies) + ![ListItem.IsFolder + SubString(Container.FolderPath,videodb) + !IsEmpty(ListItem.Title)]</visible>
						<control type="label">
							<top>24</top>
							<label>$INFO[ListItem.Genre]</label>
							<width>750</width>
							<include>detail_Sub</include>
						</control>
						<control type="label">
							<top>47</top>
							<label>$INFO[ListItem.Year,, â€¢ ]$INFO[ListItem.Duration,, $LOCALIZE[31701]]</label>
							<width>750</width>
							<include>detail_Sub</include>
						</control>
					</control>
					<control type="group">
						<visible>Container.Content(tvshows) + !IsEmpty(ListItem.TVShowTitle)</visible>
						<control type="label">
							<top>24</top>
							<label>$INFO[ListItem.Property(UnWatchedEpisodes),, $LOCALIZE[16101] $LOCALIZE[20360]]</label>
							<width>750</width>
							<include>detail_Sub</include>
						</control>
						<control type="label">
							<top>47</top>
							<label>$VAR[nextaired_Info]</label>
							<width>750</width>
							<include>detail_Sub</include>
						</control>
					</control>
					<control type="group">
						<visible>Window.IsActive(Pictures)</visible>
						<control type="label">
							<top>24</top>
							<label>[UPPERCASE]$INFO[ListItem.PictureResolution,$LOCALIZE[21805] - ][/UPPERCASE]</label>
							<width>750</width>
							<include>detail_Sub</include>
						</control>
					</control>
				</control>
			</control>
		</control>

		<!--strip top-->
		<control type="group">
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<include>transition_Info</include>
			<visible>Control.IsVisible(53)</visible>
			<control type="group">
				<left>265</left>
				<top>93</top>
				<control type="group">
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>750</width>
						<include>detail_Title</include>
					</control>
					<control type="label">
						<left>772</left>
						<label>$INFO[Container(53).ListItem(1).Label]</label>
						<width>750</width>
						<include>detail_Title</include>
						<animation effect="fade" start="100" end="30" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
			<!--container-->
			<control type="wraplist" id="53">
				<viewtype label="Gallery">info</viewtype>
				<left>-515</left>
				<top>129</top>
				<width>1900</width>
				<height>800</height>
				<onleft>53</onleft>
				<onright>53</onright>
				<onup>6000</onup>
				<ondown condition="!Window.IsActive(Pictures)">8000</ondown>
				<ondown condition="Window.IsActive(Pictures)">71</ondown>
				<focusposition>1</focusposition>
				<include>global_Scrolltime</include>
				<pagecontrol>71</pagecontrol>
				<orientation>horizontal</orientation>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(pictures)</visible>
				<itemlayout width="770" height="442">
					<control type="image">
						<width>770</width>
						<height>442</height>
						<aspectratio align="center">stretch</aspectratio>
						<texture>frames/frame_Landscape-nf.png</texture>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<control type="image">
							<width>750</width>
							<height>422</height>
							<texture background="true">thumbs/default_Landscape.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<centerleft>375</centerleft>
							<centertop>211</centertop>
							<width>128</width>
							<height>128</height>
							<texture>$INFO[ListItem.ActualIcon]</texture>
							<visible>StringCompare(ListItem.Icon,DefaultFolderBack.png) | Window.IsActive(pictures) + ListItem.IsFolder</visible>
						</control>
						<control type="image">
							<width>750</width>
							<height>422</height>
							<texture background="true">$VAR[thumb_Landscape]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
						</control>
						<control type="image">
							<centerleft>375</centerleft>
							<top>300</top>
							<width>289</width>
							<height>112</height>
							<include>art_ClearLogo</include>
						</control>
						<control type="group">
							<left>724</left>
							<top>396</top>
							<include>status_Info</include>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="770" height="422">
					<control type="image">
						<width>770</width>
						<height>442</height>
						<aspectratio align="center">stretch</aspectratio>
						<texture>frames/frame_Landscape-nf.png</texture>
					</control>
					<control type="group">
						<left>10</left>
						<top>10</top>
						<control type="image">
							<width>750</width>
							<height>422</height>
							<texture background="true">thumbs/default_Landscape.png</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<centerleft>375</centerleft>
							<centertop>211</centertop>
							<width>128</width>
							<height>128</height>
							<texture>$INFO[ListItem.ActualIcon]</texture>
							<visible>StringCompare(ListItem.Icon,DefaultFolderBack.png) | Window.IsActive(pictures) + ListItem.IsFolder</visible>
						</control>
						<control type="image">
							<width>750</width>
							<height>422</height>
							<texture background="true">$VAR[thumb_Landscape]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<animation effect="zoom" start="100" end="173" time="200" center="352,205" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
						</control>
						<control type="image">
							<centerleft>375</centerleft>
							<top>300</top>
							<width>289</width>
							<height>112</height>
							<include>art_ClearLogo</include>
							<animation effect="zoom" start="100" end="173" time="200" center="352,205" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
						</control>
						<control type="group">
							<left>724</left>
							<top>396</top>
							<include>status_Info</include>
							<visible>!Control.HasFocus(8000)</visible>
							<animation effect="zoom" start="100" end="173" time="200" center="352,205" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!--frame-->																
			<control type="image">
				<left>255</left>
				<top>129</top>
				<width>770</width>
				<height>442</height>
				<aspectratio align="center">stretch</aspectratio>
				<texture>frames/frame_Landscape-fo.png</texture>
				<animation type="Conditional" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)" reversible="true">
					<effect type="zoom" time="200" center="640,330" start="100"  end="173" tween="Cubic" />
					<effect type="Fade" time="200" start="100" end="0" tween="Cubic" />
				</animation>
			</control>
		</control>
	</include>

<!--fullscreen layout-->
	<include name="view_GalleryFull-Commons">
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">thumbs/default_Landscape.png</texture>
			<aspectratio align="center">scale</aspectratio>
		</control>
		<control type="image">
			<include>screen_Dimensions</include>
			<texture background="true">$VAR[thumb_Landscape]</texture>
			<aspectratio align="center" aligny="top">scale</aspectratio>
		</control>
		<control type="image">
			<include>screen_Dimensions</include>
			<texture>overlays/vignette2.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="image">
			<left>40</left>
			<top>20</top>
			<width>256</width>
			<height>99</height>
			<aspectratio align="center" aligny="top">keep</aspectratio>
			<include>art_ClearLogo</include>
		</control>
		<control type="image">
			<centerleft>640</centerleft>
			<centertop>360</centertop>
			<width>96</width>
			<height>96</height>
			<include>art_DefaultIcon</include>
		</control>
	</include>
	<include name="view_GalleryFull">																													
		<control type="wraplist" id="531">
			<viewtype label="Gallery">biginfo</viewtype>
			<include>screen_Dimensions</include>
			<onleft>531</onleft>
			<onright>531</onright>
			<onup>6000</onup>
			<ondown>71</ondown>
			<preloaditems>2</preloaditems>
			<pagecontrol>71</pagecontrol>
			<include>toggle_Menu</include>
			<include>global_Scrolltime</include>
			<orientation>horizontal</orientation>
			<include>transition_Content</include>
			<include>transition_Info</include>
			<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
			<itemlayout height="screen_Height" width="screen_Width">
				<include>view_GalleryFull-Commons</include>
			</itemlayout>
			<focusedlayout height="screen_Height" width="screen_Width">
				<include>view_GalleryFull-Commons</include>
			</focusedlayout>
		</control>
		<control type="group">
			<include>toggle_Menu</include>
			<include>fadeinout</include>
			<include>transition_Info</include>
			<visible>[[Control.IsVisible(53) + Control.HasFocus(8000)] | Control.IsVisible(531)] + !Window.IsActive(Pictures) + !IsEmpty(ListItem.Title)</visible>
			<control type="image">
				<texture>overlays/vignette2.png</texture>
				<include>screen_Dimensions</include>
				<aspectratio>stretch</aspectratio>
				<include>fadeinout</include>
				<visible>Control.IsVisible(53) + Control.HasFocus(8000)</visible>
			</control>
			<control type="group">
				<left>40</left>
				<top>540</top>
				<animation effect="slide" start="0,495" end="0,0" easing="Out" tween="Quadratic" time="350">Visible</animation>
				<animation effect="slide" start="0,0" end="0,495" easing="Out" tween="Quadratic" time="350">Hidden</animation>
				<control type="label">
					<width>1150</width>
					<label>$VAR[global_Title]</label>
					<font>bold_Bigger-U</font>
					<textcolor>Color1</textcolor>
					<selectedcolor>Color1</selectedcolor>
				</control>
				<control type="label">
					<top>30</top>		
					<width>1150</width>
					<label>$VAR[global_Info]</label>
					<font>semibold-U</font>
					<textcolor>Color1</textcolor>
					<selectedcolor>Color1</selectedcolor>
				</control>
				<control type="image">
					<right>40</right>
					<top>32</top>
					<width>128</width>
					<height>22</height>
					<aspectratio align="right">keep</aspectratio>
					<include>detail_StarRating</include>
					<visible>!SubString(ListItem.Icon,default)</visible>
				</control>
				<control type="textbox">
					<top>55</top>
					<width>1200</width>
					<height>80</height>
					<label>$VAR[global_Plot]</label>
					<font>condensed-U</font>
					<textcolor>Color3</textcolor>
					<visible>!SubString(ListItem.Icon,default)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>