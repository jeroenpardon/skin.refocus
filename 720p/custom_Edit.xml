	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="grouplist" id="500">
			<left>460</left>
			<top>0</top>
			<width>352</width>
			<height>screen_Height</height>
			<onup>500</onup>
			<ondown>500</ondown>
			<onright>402</onright>
			<itemgap>0</itemgap>
			<align>center</align>
			<include>global_ListScroll</include>
			<include>transition_Dialog</include>
			<control type="image" id="499">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_top.png</texture>
			</control>
			<!--refresh-->
			<control type="button" id="501">
				<width>352</width>
				<label>$LOCALIZE[184]</label>
				<onclick>Close</onclick>
				<onclick>SendClick(2003,6)</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<!--artwork-->
			<control type="button" id="502">
				<width>352</width>
				<label>$LOCALIZE[31520]</label>
				<onclick>Close</onclick>
				<onclick>SendClick(2003,10)</onclick>
				<include>dialog_MenuButton</include>
				<visible>Window.IsActive(movieinformation)</visible>
			</control>
			<!--get thumb-->
			<control type="button" id="503">
				<width>352</width>
				<label>$LOCALIZE[13405]</label>
				<onclick>Close</onclick>
				<onclick>SendClick(2003,10)</onclick>
				<include>dialog_MenuButton</include>
				<visible>Window.IsActive(musicinformation)</visible>
			</control>
			<!--fanart-->
			<control type="button" id="504">
				<width>352</width>
				<label>$LOCALIZE[20413]</label>
				<onclick>Close</onclick>
				<onclick>SendClick(2003,12)</onclick>
				<include>dialog_MenuButton</include>
				<visible>Window.IsActive(musicinformation)</visible>
			</control>
			<!--fanart-->
			<control type="button" id="505">
				<width>352</width>
				<label>Artwork Downloader</label>
				<onclick>Close</onclick>
				<onclick condition="Container.Content(movies)">XBMC.RunScript(script.artwork.downloader, mode=gui, mediatype=movie, dbid=$INFO[ListItem.DBID])</onclick>
				<onclick condition="Container.Content(tvshows)">XBMC.RunScript(script.artwork.downloader, mode=gui, mediatype=tvshow, dbid=$INFO[ListItem.DBID])</onclick>
				<include>dialog_MenuButton</include>
				<visible>Window.IsActive(movieinformation) + [Container.Content(tvshows) | Container.Content(seasons) | Container.Content(movies)] + System.HasAddon(script.artwork.downloader)</visible>
			</control>
			<!--tvtunes-->
			<control type="button" id="506">
				<width>352</width>
				<label>$LOCALIZE[31521]</label>
				<onclick>Close</onclick>
				<onclick>RunScript(script.tvtunes,mode=solo&amp;tvpath=$INFO[Window(Home).Property(TVShowPath)]&amp;tvname=$INFO[ListItem.TVShowTitle])</onclick>
				<include>dialog_MenuButton</include>
				<visible>System.HasAddon(script.tvtunes) + [Container.Content(TVShows) | Container.Content(movies) | Container.Content(musicvideos)] + IsEmpty(Window(movieinformation).Property("TvTunes_HideVideoInfoButton"))</visible>
				<enable>Skin.HasSetting(tvtunes.enable)</enable>
			</control>
			<control type="image" id="513">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_bottom.png</texture>
			</control>
		</control>
	</controls>
