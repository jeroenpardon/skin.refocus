<includes>
	<include name="WeatherMenu">
		<control type="grouplist" id="6000">
			<posx>-275</posx>
			<posy>40</posy>
			<visible allowhiddenfocus="true">ControlGroup(6000).HasFocus + !Skin.HasSetting(global.kiosk)</visible>
			<onright>50</onright>
			<include>MenuOpen</include>
			<include>transition_Menu</include>
			<control type="group">
				<width>220</width>
				<height>42</height>
				<!--location-->
				<control type="group">
					<width>220</width>
					<height>42</height>
					<control type="spincontrolex" id="3">
						<height>170</height>
						<posy>3</posy>
						<onup>131</onup>
						<ondown>2</ondown>
						<onright>50</onright>
						<texturefocus>home/menuSelect.png</texturefocus>
						<textureup>-</textureup>
						<texturedown>-</texturedown>
						<textureupfocus>-</textureupfocus>
						<texturedownfocus>-</texturedownfocus>
						<font>-</font>
						<include>button_Menu</include>
					</control>
					<control type="label">
						<label>$LOCALIZE[35500]</label>
						<textcolor>Color1</textcolor>
						<include>button_Menu</include>
						<visible>!Control.HasFocus(3)</visible>
					</control>
					<control type="label">
						<label>$LOCALIZE[35500]</label>
						<textcolor>Focused</textcolor>
						<include>button_Menu</include>
						<visible>Control.HasFocus(3)</visible>
					</control>
				</control>
			</control>
			<control type="group">
				<width>220</width>
				<height>42</height>
				<!--refresh-->
				<control type="button" id="2">
					<label>$LOCALIZE[103]</label>
					<onup>3</onup>
					<ondown>4</ondown>
					<onright>50</onright>
					<include>button_Menu</include>
					<onclick>SetFocus(50)</onclick>
				</control>
			</control>
			<control type="group">
				<width>220</width>
				<height>42</height>
				<!--settings-->
				<control type="button" id="4">
					<label>$LOCALIZE[5]</label>
					<onclick>ActivateWindow(MyWeatherSettings)</onclick>
					<onup>2</onup>
					<ondown>131</ondown>
					<onright>50</onright>
					<include>button_Menu</include>
				</control>
			</control>
			<control type="group">
				<width>220</width>
				<height>42</height>
				<!--favourites-->
				<control type="button" id="131">
					<label>$LOCALIZE[1036]</label>
					<onclick>ActivateWindow(Favourites)</onclick>
					<onup>4</onup>
					<ondown>3</ondown>
					<onright>50</onright>
					<include>button_Menu</include>
				</control>
			</control>
		</control>
	</include>
</includes>