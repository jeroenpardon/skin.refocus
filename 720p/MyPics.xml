<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<menucontrol>6000</menucontrol>
	<views>50,53,572,574,58</views>
	<controls>
	<!--menu trigger-->
		<control type="button" id="8000">
			<label>-</label>
			<onup>53</onup>
			<ondown>53</ondown>
			<onleft>53</onleft>
			<onright>53</onright>
			<width>200</width>
			<visible allowhiddenfocus="true">false</visible>
		</control>

	<!--global includes-->
		<include>global_Background</include>
		<include>global_Includes</include>
		<include>global_MenuGuide</include>

	<!--window header-->
		<include name="windowTitle">
			<param name="Label" value="$VAR[window:Title.Pictures]"/>
		</include>

		<include>global_Itemcount</include>

	<!--view includes-->
		<include>view_List</include><!--50-->
		<include>view_Gallery</include><!--53-->
		<include>view_IconSquare</include><!--572-->
		<include>view_IconSquareSmall</include><!--574-->
		<include>view_Tiles</include><!--58-->

	<!--detail includes-->
		<include>detail_ListFiles</include>

	<!--list-->
		<control type="group">
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<visible>Control.IsVisible(50) + !IsEmpty(Container.FolderPath) + !SubString(Container.FolderPath,addons)</visible>
			<control type="group">
				<left>680</left>
				<top>80</top>
				<control type="image">
					<width>532</width>
					<height>532</height>
					<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
					<bordersize>7</bordersize>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<fadetime>fadetime_Thumb</fadetime>
					<visible>ListItem.IsFolder + !SubString(ListItem.Icon,DefaultFolderBack)</visible>
				</control>
				<control type="image">
					<width>532</width>
					<height>614</height>
					<texture fallback="thumbs/default_Portrait.png" background="true">$INFO[ListItem.FilenameAndPath]</texture>
					<bordertexture border="0">frames/frame-nf.png</bordertexture>
					<bordersize>7</bordersize>
					<aspectratio align="center" aligny="top">keep</aspectratio>
					<fadetime>fadetime_Thumb</fadetime>
					<visible>!ListItem.IsFolder</visible>
				</control>
			</control>
		</control>

	<!--scrollbars-->
		<include>PageControls</include>
	
	<!--menu-->
		<include>menu_Files</include>
	</controls>
</window>