<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">101</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<control type="label">
				<font>regular</font>
				<label>$ADDON[script.cu.lrclyrics 32199]</label>
				<visible>false</visible>
			</control>
			<control type="image">
				<width>screen_Width</width>
				<height>745</height>
				<texture>colorize/100.png</texture>
				<colordiffuse>bb0c2c40</colordiffuse>
			</control>
			<control type="group">
				<left>20</left>
				<top>20</top>
				<control type="label">
					<width>1260</width>
					<label>$VAR[player:Title]</label>
					<align>center</align>
					<include>osd_Title</include>
				</control>
				<control type="label">
					<top>28</top>
					<width>1260</width>
					<label>$INFO[MusicPlayer.Artist]</label>
					<align>center</align>
					<textcolor>Color3</textcolor>
					<include>detail_Sub</include>
				</control>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<left>20</left>
				<top>100</top>
				<width>1260</width>
				<height>620</height>
				<onleft>dialog.close(all,true)</onleft>
				<onright>dialog.close(all,true)</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<scrolltime>200</scrolltime>
				<itemlayout height="40">
					<control type="label">
						<width>1260</width>
						<label fallback="">$INFO[ListItem.Label]</label>
						<font>semibold_Big</font>
						<align>center</align>
						<textcolor>Color2</textcolor>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="label">
						<width>1260</width>
						<label fallback="">[B]$INFO[ListItem.Label][/B]</label>
						<font>semibold_Big</font>
						<align>center</align>
						<textcolor>Color1</textcolor>
						<wrapmultiline>true</wrapmultiline>
					</control>
				</focusedlayout>
			</control>
			<!--next page-->
			<control type="spincontrol" id="111">
				<subtype>page</subtype>
				<showonepage>true</showonepage>
				<!--<visible>Control.IsVisible(110)</visible>-->
				<visible>false</visible>
			</control>
			<!--pick label-->
			<control type="label" id="2">
				<width>550</width>
				<height>30</height>
				<label>31203</label>
				<font>regular</font>
				<textcolor>red</textcolor>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<width>550</width>
				<height>440</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<include>global_ListScroll</include>
				<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="40">
					<control type="label">
						<left>10</left>
						<width>530</width>
						<height>40</height>
						<font>regular</font>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="image">
						<width>550</width>
						<height>41</height>
						<visible>Control.HasFocus(120)</visible>
						<texture>views/focus.png</texture>
					</control>
					<control type="label">
						<width>530</width>
						<height>40</height>
						<font>regular</font>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<!--next page-->
			<control type="spincontrol" id="121">
				<subtype>page</subtype>
				<font>regular</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<showonepage>true</showonepage>
				<visible>false</visible>
				<visible>Control.IsVisible(120)</visible>
			</control>
			<!--scraper label-->
			<control type="label" id="200">
				<visible>false</visible>
			</control>
		</control>
	</controls>
</window>