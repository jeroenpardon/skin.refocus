							<control type="label">
								<top>25</top>
								<width>470</width>
								<label>$INFO[ListItem.Label2]</label>
								<include>dialog_CommonListItemFocus</include>
								<visible>IsEmpty(ListItem.Property(Addon.Creator))</visible>
							</control>
						</control>
					</focusedlayout>
				</control>
			</control>
		<!--manual-->
			<control type="button" id="5">
				<left>20</left>
				<bottom>20</bottom>
				<width>250</width>
				<label>$LOCALIZE[368]</label>
				<onleft>3</onleft>
				<onright>3</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<include>dialog_WindowButton</include>
			</control>
		</control>
	</controls>
</window>