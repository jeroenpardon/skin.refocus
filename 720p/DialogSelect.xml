<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol>3</defaultcontrol>
	<include>transition_Dialog</include>
	<coordinates>
		<system>1</system>
		<left>340</left>
		<top>35</top>
	</coordinates>
	<controls>
		<control type="group">
			<width>600</width>
			<height>650</height>
			<animation effect="fade" start="400" end="50" time="500" condition="Window.IsActive(virtualkeyboard)">Conditional</animation>
			<control type="image">
				<width>600</width>
				<height>650</height>
				<include>dialog_Window</include>
			</control>
			<control type="label" id="1">
				<width>592</width>
				<scroll>true</scroll>
				<include>dialog_Windowtitle</include>
			</control>
			<control type="group">
				<top>60</top>
				<control type="image">
					<width>592</width>
					<include>dialog_Separator</include>
				</control>
				<include name="dialog_Common-List">
					<param name="ID" value="3"/>
					<param name="ContainerWidth" value="592"/>
					<param name="ContainerHeight" value="480"/>
					<param name="Width" value="592"/>
					<param name="OnUp" value="3"/>
					<param name="OnDown" value="3"/>
					<param name="OnLeft" value="5"/>
					<param name="OnRight" value="5"/>
				</include>
				<control type="list" id="6">
					<left>4</left>
					<top>1</top>
					<width>596</width>
					<height>504</height>
					<onleft>5</onleft>
					<onright>5</onright>
					<onup>6</onup>
					<ondown>6</ondown>
					<include>global_ListScroll</include>
					<itemlayout width="592" height="84">
						<control type="image">
							<width>592</width>
							<height>84</height>
							<include>dialog_CommonList</include>
						</control>
						<control type="image">
							<left>84</left>
							<height>84</height>
							<include>dialog_Separator-y</include>
						</control>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<colordiffuse>Color4</colordiffuse>
							<aspectratio align="center">keep</aspectratio>
							<visible>SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="image">
							<width>84</width>
							<height>84</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">scale</aspectratio>
							<visible>!SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="group">
							<left>90</left>
							<top>7</top>
							<control type="label">
								<width>470</width>
								<label>[B]$INFO[ListItem.Label][/B]</label>
								<include>dialog_CommonListItem</include>
							</control>
							<control type="label">
								<top>25</top>
								<width>470</width>
								<label>$INFO[ListItem.Label2,, &#8226; ]$INFO[ListItem.Property(Addon.Creator),$LOCALIZE[31142] ]</label>
								<textcolor>Color5</textcolor>
								<include>dialog_CommonListItem</include>
								<visible>!IsEmpty(ListItem.Property(Addon.Creator))</visible>
							</control>
							<control type="label">
								<top>25</top>
								<width>470</width>
								<label>$INFO[ListItem.Label2]</label>
								<textcolor>Color5</textcolor>
								<include>dialog_CommonListItem</include>
								<visible>IsEmpty(ListItem.Property(Addon.Creator))</visible>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="592" height="84">
						<control type="image">
							<width>592</width>
							<height>84</height>
							<include>dialog_CommonListFocus</include>
						</control>
						<control type="image">
							<left>10</left>
							<top>10</top>
							<width>64</width>
							<height>64</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<colordiffuse>Color1</colordiffuse>
							<aspectratio align="center">keep</aspectratio>
							<visible>SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="image">
							<width>84</width>
							<height>84</height>
							<texture>$INFO[ListItem.Icon]</texture>
							<aspectratio align="center">scale</aspectratio>
							<visible>!SubString(ListItem.Icon,Default)</visible>
