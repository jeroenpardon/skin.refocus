<window id="2003">
	<defaultcontrol always="true">8000</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<controls>
		<control type="group">
			<include>transition_Container</include>
			<include>toggle_Menu</include>
			<!---images--->
			<control type="group">
				<posx>20</posx>
				<posy>28</posy>
				<control type="image">
					<width>460</width>
					<height>663</height>
					<include>frame_Poster-List</include>
					<visible>!Container.Content(musicvideos)</visible>
				</control>
				<control type="image">
					<width>414</width>
					<height>617</height>
					<texture background="true" fallback="thumbs/movie_portrait.jpg">$INFO[ListItem.Thumb]</texture>
					<aspectratio align="center">stretch</aspectratio>
					<include>thumb_Portrait-List</include>
					<visible>!Control.HasFocus(50) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				</control>
				<control type="image">
					<width>414</width>
					<height>617</height>
					<texture background="true" fallback="thumbs/tvshow_portrait.jpg">$INFO[ListItem.Property(SeasonThumb)]</texture>
					<aspectratio align="center">stretch</aspectratio>
					<include>thumb_Portrait-List</include>
					<visible>!Control.HasFocus(50) + Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<texture fallback="thumbs/actor_portrait.jpg" background="true">$INFO[Container(50).Listitem.Icon]</texture>
					<width>414</width>
					<height>617</height>
					<include>thumb_Portrait-List</include>
					<visible>Control.HasFocus(50) + !Container.Content(musicvideos)</visible>
				</control>
				<control type="image">
					<posy>20</posy>
					<width>450</width>
					<height>273</height>
					<texture fallback="thumbs/music_landscape.jpg" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="31">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio scalediffuse="false" align="center">stretch</aspectratio>
					<visible>Container.Content(musicvideos)</visible>
				</control>
			</control>
			<!--header-->
			<control type="grouplist">
				<posx>500</posx>
				<posy>70</posy>
				<itemgap>0</itemgap>
				<control type="label">
					<height>57</height>
					<width>700</width>
					<aligny>top</aligny>
					<label>$INFO[ListItem.Title]</label>
					<font>titleInfoDialog</font>
				</control>
				<control type="label">
					<label>$VAR[videoInfo.Header]</label>
					<font>smallCaps</font>
					<height>40</height>
					<aligny>top</aligny>
					<textcolor>Color2</textcolor>
				</control>
				<!--info container-->
				<control type="grouplist" id="1000">
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<control type="group">
						<width>700</width>
						<height>24</height>
						<visible>!IsEmpty(ListItem.Genre) + [Container.Content(tvshows) | Container.Content(musicvideos) | [Container.Content(movies) + [!SubString(Container.FolderPath,plugin) |SubString(Container.FolderPath,plugin.video.apple)]]]</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[515] [COLOR=Color1]$INFO[ListItem.Genre][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>Container.Content(tvshows) + !IsEmpty(Window(Home).Property(NextAired.Label))</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[31076] [COLOR=Color1]$INFO[Window(Home).Property(NextAired.NextDate)][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
							<visible>!IsEmpty(Window(Home).Property(NextAired.NextDate))</visible>
						</control>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[31075] [COLOR=Color1]$INFO[Window(Home).Property(NextAired.LatestDate)][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
							<visible>IsEmpty(Window(Home).Property(NextAired.NextDate)) + !StringCompare(Window(Home).Property(NextAired.Status),canceled/ended)</visible>
						</control>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[31077] [COLOR=Color1]$INFO[Window(Home).Property(NextAired.Status)][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
							<visible>IsEmpty(Window(Home).Property(NextAired.NextDate)) + StringCompare(Window(Home).Property(NextAired.Status),canceled/ended)</visible>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Date) + Container.Content(episodes)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[20416] [COLOR=Color1]$INFO[ListItem.Date][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Duration)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[180] [COLOR=Color1]$INFO[ListItem.Duration] $LOCALIZE[12391][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Writer)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[20417] [COLOR=Color1]$INFO[ListItem.Writer][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Director)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[20339] [COLOR=Color1]$INFO[ListItem.Director][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Studio)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[572] [COLOR=Color1]$INFO[ListItem.Studio][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>Container.Content(tvshows)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[31089] [COLOR=Color1]$INFO[ListItem.Episode] $LOCALIZE[20360][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>Container.Content(tvshows)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[16101] [COLOR=Color1]$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[20360][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.MPAA)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[563] [COLOR=Color1]$INFO[ListItem.MPAA][/COLOR]</label>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<control type="label">
							<width>700</width>
							<label>[COLOR=Color2]$LOCALIZE[573][/COLOR] $INFO[ListItem.Path]</label>
							<textcolor>Color1</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
				</control>
				<!--spacer-->
				<control type="label">
					<label>-</label>
					<height>20</height>
				</control>
				<!--button area-->
				<control type="grouplist" id="8000">
					<height>45</height>
					<width>700</width>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<!--play-->
					<control type="group">
						<width>125</width>
						<visible>!Container.Content(tvshows)</visible>
						<control type="button" id="8001">
							<label>$LOCALIZE[208]</label>
							<onclick>SendClick(2003,8)</onclick>
							<onleft>8007</onleft>
							<onright>8002</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--cinema-->
					<control type="group">
						<width>125</width>
						<visible>System.HasAddon(script.cinema.experience) + Container.Content(movies) + !SubString(ListItem.Path,plugin://)</visible>
						<control type="button" id="8002">
							<label>cinema</label>
							<onleft>8001</onleft>
							<onright>8003</onright>
							<onclick>Playlist.Clear</onclick>
							<onclick>Dialog.Close(MovieInformation)</onclick>
							<onclick>XBMC.RunScript(script.cinema.experience)</onclick>
							<include>button_Inline</include>
						</control>
					</control>
					<!--browse-->
					<control type="group">
						<width>125</width>
						<visible>Container.Content(tvshows)</visible>
						<control type="button" id="8003">
							<label>$LOCALIZE[1024]</label>
							<onclick>SendClick(2003,8)</onclick>
							<onleft>8002</onleft>
							<onright>8004</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--cast/artists-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8004">
							<label>$VAR[videoInfo.Cast]</label>
							<onclick>SendClick(2003,5)</onclick>
							<ondown>50</ondown>
							<onleft>8003</onleft>
							<onright>8005</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--trailer-->
					<control type="group">
						<width>125</width>
						<visible>Container.Content(movies) + !SubString(ListItem.Path,plugin://)</visible>
						<control type="button" id="8005">
							<label>$LOCALIZE[20410]</label>
							<onclick>SendClick(2003,11)</onclick>
							<onleft>8004</onleft>
							<onright>8007</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--edit-->
					<control type="group">
						<width>125</width>
						<visible>!SubString(ListItem.Path,plugin://)</visible>
						<control type="button" id="8007">
							<label>$LOCALIZE[21435]</label>
							<onclick>ActivateWindow(62)</onclick>
							<include>button_Inline</include>
							<onleft>8005</onleft>
							<onright>8001</onright>
						</control>
					</control>
				</control>
				<!--spacer-->
				<control type="label">
					<label>-</label>
					<height>5</height>
				</control>
				<!--plot-->
				<control type="textbox" id="400">
					<width>700</width>
					<height>198</height>
					<label>$INFO[ListItem.Plot]</label>
					<font>descriptionSmall</font>
					<include>autoscroll-plot</include>
					<visible allowhiddenfocus="true">![Control.HasFocus(8004) | Control.HasFocus(50)]</visible>
				</control>
				<!--cast list-->
				<control type="list" id="50">
					<width>645</width>
					<height>176</height>
					<onleft>8000</onleft>
					<onright>8000</onright>
					<onup>50</onup>
					<ondown>50</ondown>
					<scrolltime tween="Cubic" easing="Out">200</scrolltime>
					<visible allowhiddenfocus="true">Control.HasFocus(8004) | Control.HasFocus(50)</visible>
					<itemlayout height="44">
						<control type="image">
							<width>645</width>
							<include>listButton_Alt</include>
						</control>
						<control type="label">
							<posx>15</posx>
							<width>615</width>
							<label>$INFO[ListItem.Label]</label>
							<include>listButton_Label</include>
						</control>
					</itemlayout>
					<focusedlayout height="44">
						<control type="image">
							<width>645</width>
							<include>listButton_Alt</include>
							<visible>!Control.HasFocus(50)</visible>
						</control>
						<control type="image">
							<width>645</width>
							<include>listButton_Alt-focus</include>
							<visible>Control.HasFocus(50)</visible>
						</control>
						<control type="label">
							<posx>15</posx>
							<width>615</width>
							<label>$INFO[ListItem.Label]</label>
							<include>listButton_Label</include>
						</control>
					</focusedlayout>
				</control>
			</control>
			<!--flags-->
			<control type="group">
				<posx>490</posx>
				<posy>600</posy>
				<include>flags_Type-info</include>
			</control>
			<control type="image">
				<posx>500</posx>
				<posy>590</posy>
				<width>128</width>
				<height>72</height>
				<texture>$VAR[flag_Studio]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(tvshows)</visible>
			</control>
		</control>
	</controls>
</window>