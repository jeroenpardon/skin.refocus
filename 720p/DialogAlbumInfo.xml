							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
						</control>
					</control>
					<!--type-->
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Album_Type))</visible>
