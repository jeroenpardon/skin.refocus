							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Artist_Style))</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[176] [COLOR=Color1]$INFO[ListItem.Property(Artist_Style)][/COLOR]</label>
							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Instruments))</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[21892] [COLOR=Color1]$INFO[ListItem.Property(Instruments)][/COLOR]</label>
							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Property(Artist_YearsActive))</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[21898] [COLOR=Color1]$INFO[ListItem.Property(Artist_YearsActive)][/COLOR]</label>
							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
					<!--path-->
					<control type="group">
						<width>700</width>
						<height>22</height>
						<visible>!IsEmpty(ListItem.Path)</visible>
						<control type="label">
							<width>700</width>
							<label>$LOCALIZE[573] [COLOR=Color1]$INFO[ListItem.Path][/COLOR]</label>
							<textcolor>Color2</textcolor>
							<include>label_InfoDialog</include>
							<include>autoscroll-line</include>
						</control>
					</control>
				</control>
				<!--spacer-->
				<control type="label">
					<label>-</label>
					<height>10</height>
				</control>
				<!--button area-->
				<control type="grouplist" id="8000">
					<height>40</height>
					<width>700</width>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<!--browse-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8001">
							<label>$LOCALIZE[1024]</label>
							<onclick>Close</onclick>
							<onleft>8007</onleft>
							<onright>8002</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--tracks-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8002">
							<label>$LOCALIZE[182]</label>
							<onclick>SendClick(2001,5)</onclick>
							<onleft>8001</onleft>
							<onright>8003</onright>
							<ondown>50</ondown>
							<include>button_Inline</include>
						</control>
					</control>
					<!--refresh-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8003">
							<label>$LOCALIZE[184]</label>
							<onclick>SendClick(2001,6)</onclick>
							<onleft>8002</onleft>
							<onright>8004</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--thumb-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8004">
							<label>$LOCALIZE[31019]</label>
							<onclick>SendClick(2003,10)</onclick>
							<ondown>50</ondown>
							<onleft>8003</onleft>
							<onright>8005</onright>
							<include>button_Inline</include>
						</control>
					</control>
					<!--fanart-->
					<control type="group">
						<width>125</width>
						<control type="button" id="8005">
							<label>$LOCALIZE[31016]</label>
							<onclick>SendClick(2003,12)</onclick>
							<onleft>8004</onleft>
							<onright>8007</onright>
							<include>button_Inline</include>
						</control>
					</control>
				</control>
				<!--spacer-->
				<control type="label">
					<label>-</label>
					<height>5</height>
				</control>
				<!--plot-->
				<control type="textbox" id="400">
					<width>700</width>
					<height>272</height>
					<label>$VAR[global_Plot.Condition]</label>
					<font>descriptionSmall</font>
					<include>autoscroll-plot</include>
					<visible allowhiddenfocus="true">![Control.HasFocus(8002) | Control.HasFocus(50)]</visible>
				</control>
				<!--track list-->
				<control type="list" id="50">
					<width>645</width>
					<height>264</height>
					<onleft>8000</onleft>
					<onright>8000</onright>
					<onup>50</onup>
					<ondown>50</ondown>
					<scrolltime tween="Cubic" easing="Out">200</scrolltime>
					<visible allowhiddenfocus="true">Control.HasFocus(8002) | Control.HasFocus(50)</visible>
					<itemlayout height="44">
						<control type="image">
							<width>645</width>
							<include>listButton_Alt</include>
						</control>
						<control type="label">
							<posx>15</posx>
							<width>615</width>
							<label>$INFO[ListItem.Label]</label>
							<include>listButton_Label</include>
						</control>
						<control type="label">
							<posx>630</posx>
							<width>615</width>
							<label>$INFO[ListItem.Duration]</label>
							<align>right</align>
							<include>listButton_Label</include>
						</control>
					</itemlayout>
					<focusedlayout height="44">
						<control type="image">
							<width>645</width>
							<include>listButton_Alt</include>
							<visible>!Control.HasFocus(50)</visible>
						</control>
						<control type="image">
							<width>645</width>
							<include>listButton_Alt-focus</include>
							<visible>Control.HasFocus(50)</visible>
						</control>
						<control type="label">
							<posx>15</posx>
							<width>615</width>
							<label>$INFO[ListItem.Label]</label>
							<include>listButton_Label</include>
						</control>
						<control type="label">
							<posx>630</posx>
							<width>615</width>
							<label>$INFO[ListItem.Duration]</label>
							<align>right</align>
							<include>listButton_Label</include>
						</control>
					</focusedlayout>
				</control>
			</control>
			<!--flags-->
			<control type="group">
				<posx>150</posx>
				<posy>500</posy>
				<control type="image">
					<width>128</width>
					<height>32</height>
					<info>ListItem.StarRating</info>
					<colordiffuse>Color7</colordiffuse>
					<aspectratio align="center">keep</aspectratio>
					<visible>Container.Content(albums)</visible>
				</control>
				<control type="image">
					<posy>40</posy>
					<width>128</width>
					<height>72</height>
					<aspectratio align="center">keep</aspectratio>
					<colordiffuse>Color1</colordiffuse>
					<texture>$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
					<visible>!IsEmpty(Listitem.Property(Album_Label))</visible>
				</control>
			</control>
		</control>
	</controls>
</window>