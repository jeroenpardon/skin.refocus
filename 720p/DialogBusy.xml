<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>59</left><!--32-->
		<top>15</top>
	</coordinates>
	<controls>
		<control type="group">
			<!--move busy label to the right when vertical home menu is active to prevent overlapping-->
			<animation effect="slide" time="0" end="290" condition="Window.IsActive(home) + StringCompare(Skin.String(homemenu.type),vertical) + Control.HasFocus(9000)">Conditional</animation>

			<!--move busy label to the left when horizontal home menu is active (to align with player status label in fullscreenvideo)-->
			<animation effect="slide" time="0" end="-20,10" condition="Window.IsActive(home) + StringCompare(Skin.String(homemenu.type),horizontal)">Conditional</animation>

			<!--correct "working" label position for windows with no menu indicator-->
			<animation effect="slide" time="0" end="-27" condition="Window.IsActive(settings) | Window.IsActive(systeminformation)">Conditional</animation>

			<width>950</width>
			<visible>!Window.IsActive(startup)</visible>
			<include>transition_WindowTitle</include>
			<include>window_TitleMove</include>
			<include>toggle_Menu</include>
			<control type="list" id="9999">
				<width>600</width>
				<height>60</height>
				<scrolltime>0</scrolltime>
				<autoscroll time="1000">true</autoscroll>
				<orientation>vertical</orientation>
				<itemlayout height="60">
					<control type="label">
						<width>950</width>
						<aligny>center</aligny>
						<font>light_Window</font>
						<textcolor>Color1</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="60">
					<control type="label">
						<width>950</width>
						<aligny>center</aligny>
						<font>light_Window</font>
						<textcolor>Color1</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[31712]</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31712].</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31712]..</label>
						<onclick>noop</onclick>
					</item>
					<item>
						<label>$LOCALIZE[31712]...</label>
						<onclick>noop</onclick>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>