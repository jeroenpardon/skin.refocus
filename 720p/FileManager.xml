<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">20</defaultcontrol>
	<menucontrol>menu_Control</menucontrol>
	<controls>

	<!--global includes-->
		<include>global_Background</include>
		<include>global_Clock</include>
		<include>global_Sortletter</include>
		<include>global_Playing</include>

	<!--window header-->
		<include name="windowTitle">
			<param name="Left" value="32"/>
			<param name="Label" value="$VAR[window:Title.System]"/>
		</include>

		<control type="group">
			<visible>Control.HasFocus(20)</visible>
			<include name="global_Itemcount">
				<param name="InfoLabel" value="[B]$INFO[Container(20).NumItems][/B] $LOCALIZE[31143]"/>
			</include>
		</control>
		<control type="group">
			<visible>Control.HasFocus(21)</visible>
			<include name="global_Itemcount">
				<param name="InfoLabel" value="[B]$INFO[Container(21).NumItems][/B] $LOCALIZE[31143]"/>
			</include>
		</control>


	<!--content-->
		<control type="group">
			<left>40</left>
			<top>100</top>
			<include>transition_Content</include>
			<!--left column label-->
			<control type="label" id="101">
				<width>595</width>
				<font>regular</font>
				<textcolor>Color2</textcolor>
			</control>
			<!--right column label-->
			<control type="label" id="102">
				<left>605</left>
				<width>595</width>
				<font>regular</font>
				<textcolor>Color2</textcolor>
			</control>
			<!--left column-->
			<control type="list" id="20">
				<top>40</top>
				<width>595</width>
				<height>552</height>
				<onleft>21</onleft>
				<onright>21</onright>
				<onup>20</onup>
				<ondown>20</ondown>
				<include>global_ListScroll</include>
				<animation effect="fade" start="100" end="60" time="200" condition="Control.HasFocus(21)">Conditional</animation>
				<itemlayout width="595" height="46">
					<control type="image">
						<width>595</width>
						<include>column_CommonList</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem</include>
					</control>
				</itemlayout>
				<focusedlayout width="595" height="46">
					<control type="image">
						<width>595</width>
						<include>column_CommonListFocus</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem-focus</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem-focus</include>
					</control>
				</focusedlayout>
			</control>
			<!--right column-->
			<control type="list" id="21">
				<left>605</left>
				<top>40</top>
				<width>595</width>
				<height>552</height>
				<onleft>20</onleft>
				<onright>20</onright>
				<onup>21</onup>
				<ondown>21</ondown>
				<include>global_ListScroll</include>
				<animation effect="fade" start="100" end="60" time="200" condition="Control.HasFocus(20)">Conditional</animation>
				<itemlayout width="595" height="46">
					<control type="image">
						<width>595</width>
						<include>column_CommonList</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem</include>
					</control>
				</itemlayout>
				<focusedlayout width="595" height="46">
					<control type="image">
						<width>595</width>
						<include>column_CommonListFocus</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem-focus</include>
					</control>
					<control type="label">
						<left>15</left>
						<width>570</width>
						<label>$INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<include>column_CommonListItem-focus</include>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>