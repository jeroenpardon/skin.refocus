						<label>$ADDON[script.skinshortcuts 32048]</label>
						<include>dialog_ControlCommons</include>
					</control>
					<!--change label-->
					<control type="label" id="402">
						<width>350</width> 
						<label>$ADDON[script.skinshortcuts 32025]</label>
