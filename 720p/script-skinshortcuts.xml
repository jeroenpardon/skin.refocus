						<onright>304</onright>
						<ondown>211</ondown>
						<include>dialog_Inline-up</include>
					</control>
					<!--move down-->
					<control type="button" id="304">
						<left>40</left>
						<label>-</label>
						<onup>211</onup>
						<onleft>303</onleft>
						<onright>302</onright>
						<ondown>211</ondown>
						<include>dialog_Inline-down</include>
					</control>
					<!--remove-->
